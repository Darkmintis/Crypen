<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Crypen.Views.EncryptPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Crypen.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Encrypt" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,10"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" RowSpacing="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Files Section -->
            <Grid Grid.Row="0" RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Encrypt Files" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="SelectFileButton" 
                            Content="Select File" 
                            Style="{StaticResource CrypenPrimaryButtonStyle}" 
                            Click="SelectFileButton_Click">
                        <Button.Icon>
                            <FontIcon Glyph="&#xE8E5;"/>
                        </Button.Icon>
                    </Button>
                    
                    <TextBlock x:Name="SelectedFileText" 
                               Text="No file selected" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Folders Section -->
            <Grid Grid.Row="1" RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Encrypt Folders" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="SelectFolderButton" 
                            Content="Select Folder" 
                            Style="{StaticResource CrypenSecondaryButtonStyle}" 
                            Click="SelectFolderButton_Click">
                        <Button.Icon>
                            <FontIcon Glyph="&#xE8B7;"/>
                        </Button.Icon>
                    </Button>
                    
                    <TextBlock x:Name="SelectedFolderText" 
                               Text="No folder selected" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- USB Drives Section -->
            <Grid Grid.Row="2" RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Encrypt USB Drives" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="RefreshDrivesButton" 
                            Content="Refresh Drives" 
                            Style="{StaticResource CrypenAccentButtonStyle}" 
                            Click="RefreshDrivesButton_Click">
                        <Button.Icon>
                            <FontIcon Glyph="&#xE895;"/>
                        </Button.Icon>
                    </Button>
                </StackPanel>
                
                <ListView Grid.Row="2" x:Name="UsbDrivesListView" 
                          SelectionMode="Single"
                          SelectionChanged="UsbDrivesListView_SelectionChanged"
                          Height="200"
                          BorderThickness="1"
                          BorderBrush="{ThemeResource ButtonBorderThemeBrush}"
                          Padding="10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <FontIcon Grid.Column="0" Glyph="&#xE88E;" Foreground="{StaticResource CrypenAccentBrush}"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Path}" Foreground="Gray"/>
                                    <TextBlock>
                                        <Run Text="{Binding FreeSpace}"/>
                                        <Run Text=" free of "/>
                                        <Run Text="{Binding TotalSize}"/>
                                    </TextBlock>
                                </StackPanel>
                                
                                <Button Grid.Column="2" Content="Encrypt" 
                                        Tag="{Binding DriveLetter}"
                                        Click="EncryptDriveButton_Click"
                                        Style="{StaticResource CrypenAccentButtonStyle}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                    <!-- Empty state message -->
                    <ListView.Footer>
                        <TextBlock x:Name="NoDrivesTextBlock" 
                                 Text="No USB drives detected. Connect a drive and click Refresh."
                                 HorizontalAlignment="Center" 
                                 Margin="0,20" 
                                 Foreground="Gray"
                                 Visibility="Collapsed"/>
                    </ListView.Footer>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page>
